-- ========================================
-- ü©∏ CATHUD MOBILE - FIX DEFINITIVO DE VISIBILIDADE
-- ========================================

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Deleta vers√µes antigas para n√£o dar conflito
if playerGui:FindFirstChild("CATHUD_MOBILE_FIX") then
    playerGui.CATHUD_MOBILE_FIX:Destroy()
end

local gui = Instance.new("ScreenGui")
gui.Name = "CATHUD_MOBILE_FIX"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true 
gui.DisplayOrder = 999 -- For√ßa ficar na frente de tudo
gui.Parent = playerGui

-- √çCONE (Aumentado para facilitar o toque no celular)
local hudIcon = Instance.new("TextButton")
hudIcon.Size = UDim2.new(0, 60, 0, 60)
hudIcon.Position = UDim2.new(0.05, 0, 0.3, 0)
hudIcon.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
hudIcon.Text = "ü©∏"
hudIcon.TextScaled = true
hudIcon.ZIndex = 1001 -- Garante que o √≠cone seja clic√°vel
hudIcon.Parent = gui
Instance.new("UICorner", hudIcon).CornerRadius = UDim.new(1, 0)

-- MENU PRINCIPAL
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0.6, 0, 0.5, 0)
mainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 0, 0)
mainFrame.BorderSizePixel = 2
mainFrame.BorderColor3 = Color3.fromRGB(255, 0, 0)
mainFrame.Visible = false -- Come√ßa invis√≠vel
mainFrame.ZIndex = 1000
mainFrame.Parent = gui

Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0.05, 0)

-- BOT√ÉO DE FECHAR (Dentro do Menu)
local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(0.15, 0, 0.15, 0)
closeBtn.Position = UDim2.new(0.85, 0, 0, 0)
closeBtn.BackgroundTransparency = 1
closeBtn.Text = "X"
closeBtn.TextColor3 = Color3.new(1, 1, 1)
closeBtn.TextScaled = true
closeBtn.Parent = mainFrame

-- LOGO
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, 0, 0.2, 0)
label.Text = "CATHUD MOBILE"
label.TextColor3 = Color3.new(1, 0, 0)
label.BackgroundTransparency = 1
label.TextScaled = true
label.Parent = mainFrame

-- FUN√á√ÉO DE ALTERNAR VISIBILIDADE (CORRIGIDA)
local function toggleGui()
    mainFrame.Visible = not mainFrame.Visible
    print("HUD Status: ", mainFrame.Visible) -- Debug no Console
end

hudIcon.MouseButton1Click:Connect(toggleGui)
closeBtn.MouseButton1Click:Connect(toggleGui)

-- BOT√ïES DE FUN√á√ÉO
local function createButton(txt, yPos, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.8, 0, 0.2, 0)
    btn.Position = UDim2.new(0.1, 0, yPos, 0)
    btn.Text = txt
    btn.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.TextScaled = true
    btn.Parent = mainFrame
    btn.MouseButton1Click:Connect(callback)
    Instance.new("UICorner", btn)
end

-- Exemplos de fun√ß√µes
createButton("VOAR (FLY)", 0.3, function()
    print("Fly ativado!")
    -- L√≥gica de voo aqui
end)

createButton("ATRAVESSAR TUDO", 0.6, function()
    print("Noclip ativado!")
end)
